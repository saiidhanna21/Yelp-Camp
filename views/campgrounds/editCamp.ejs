<% layout('./layouts/boilerplate.ejs')%>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=camp._id%>?_method=patch" method="post" class="validated-form" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="campground[title]">Title: </label>
                <input class="form-control" type="text" name="campground[title]" id="campground[title]" value="<%=camp.title%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="campground[location]">Location: </label>
                <input class="form-control" type="text" name="campground[location]" id="campground[location]" value="<%=camp.location%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add More Images</label>
                <input class="form-control" type="file" id="image" name='image' multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price: </label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="campground[price]" placeholder="0.00" aria-label="campground[price]"
                        aria-describedby="price-label" name="campground[price]" value="<%=camp.price%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description: </label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" required><%=camp.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <% camp.images.forEach((img,i)=>{%>
                    <img src="<%=img.thumbnail%>" class='img-thumbnail' alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete</label>
                <%}) %> 
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update</button>
            </div>
        </form>
    </div>
</div>
